{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (Node)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/server.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
